{
	"version": "2.0.0",
	"tasks": [
	  {
		"label": "Build Project",
		"type": "shell",
		"command": "cmake --build build --config Release",
		"group": {
		  "kind": "build",
		  "isDefault": true
		},
		"problemMatcher": ["$msCompile"]
	  },
	  {
		"label": "Run Active C++ File",
		"type": "shell",
		"command": "./build/tests/Release/${fileBasenameNoExtension}",
		"windows": {
		  "command": ".\\build\\tests\\Release\\${fileBasenameNoExtension}.exe"
		}
	  }
	]
  }